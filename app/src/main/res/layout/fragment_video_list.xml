<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:draggable_pane="http://schemas.android.com/apk/res-auto"
    xmlns:draggable_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- блок поиска -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff782b" >

            <TextView
                android:text="@string/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchTextEdit"
                android:layout_marginLeft="8dp"
                android:singleLine="true" />

        </LinearLayout>
        <!-- прогресс загрузки -->
        <ProgressBar
            android:id="@+id/video_list_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />

        <!-- список видео -->

        <ListView
            android:id="@+id/video_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/hint_foreground_material_dark"
            android:tag="list"/>

    </LinearLayout>


    <com.grishberg.goodtube.gui.controller.MyDraggablePanel
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:draggable_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/draggable_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        draggable_view:top_view_id="@+id/top_panel"
        draggable_view:bottom_view_id="@+id/bottom_panel"
        draggable_view:top_view_x_scale_factor="2.5"
        draggable_view:top_view_y_scale_factor="2.5"
        draggable_view:top_view_resize="true"
        draggable_view:enable_minimized_horizontal_alpha_effect="false"
        >

        <!-- ListView Episodes -->
        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/iv_fan_art"
            android:background="#ff9461c7"
            >
            <ListView
                android:id="@+id/lv_episodes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

        <!-- TvShow Fan Art -->
        <RelativeLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:minHeight="110dp"
                android:minWidth="200dp"
                >
                <FrameLayout
                    android:id="@+id/youtube_view"
                    android:layout_width="fill_parent"
                    android:background="#ff46f6f6"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
        </RelativeLayout>

    </com.grishberg.goodtube.gui.controller.MyDraggablePanel>


</FrameLayout>