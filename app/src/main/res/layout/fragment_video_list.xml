<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".VideoListActivityFragment"
                android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- блок поиска -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffff782b" >

            <TextView
                android:text="@string/search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/speach_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/mic_64"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/searchTextEdit"
                android:layout_marginLeft="8dp"
                android:singleLine="true" />

        </LinearLayout>
        <!-- прогресс загрузки -->
        <ProgressBar
            android:id="@+id/video_list_progress"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            />

        <!-- список видео -->

        <ListView
            android:id="@+id/video_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/hint_foreground_material_dark"
            android:tag="list"/>

    </LinearLayout>


    <com.github.pedrovgs.DraggableView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:draggable_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/draggable_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        draggable_view:top_view_id="@+id/top_panel"
        draggable_view:bottom_view_id="@+id/bottom_panel"
        draggable_view:top_view_x_scale_factor="2"
        draggable_view:top_view_y_scale_factor="2"
        draggable_view:top_view_margin_right="4dp"
        draggable_view:top_view_margin_bottom="4dp"
        draggable_view:top_view_resize="true"
        draggable_view:enable_minimized_horizontal_alpha_effect="false"

        >

        <!-- Нижняя панель -->
        <RelativeLayout
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_panel"
            android:background="#ff9461c7"
            >
            <ListView
                android:id="@+id/lv_episodes"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                />
        </RelativeLayout>

        <!-- Верхняя панель -->
        <RelativeLayout
            android:id="@+id/top_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentTop="true"
                android:paddingRight="1dp"
                android:paddingBottom="1dp"

                android:background="#000000"
                >
                <!-- Компонент для отображения youtube -->
                <FrameLayout
                    android:id="@+id/fragment_youtube_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    />
            </LinearLayout>
        </RelativeLayout>

    </com.github.pedrovgs.DraggableView>

</RelativeLayout>